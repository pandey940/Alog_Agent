# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

# Internal API authentication key (used by frontend to authenticate with backend)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_SECRET_KEY=your-strong-random-secret-here

# Alpha Vantage API key (for market data)
# Get yours at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here

# Dhan API Credentials
# Get yours from: https://dhanhq.co/
DHAN_CLIENT_ID=your-dhan-client-id
DHAN_ACCESS_TOKEN=your-dhan-access-token

# Flask settings
# Set to true only during local development
FLASK_DEBUG=false
